{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "module": "commonjs",

    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "local",
    "serverless.ts"
  ],
  "exclude": [
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ]
}
