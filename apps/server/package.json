{
  "name": "@raise/server",
  "private": true,
  "main": "serverless.ts",
  "scripts": {
    "postinstall": "shx cp -n src/env/local.template.ts src/env/local.ts && shx cp -n src/env/local.ts src/env/env.ts && serverless dynamodb install",
    "start": "npm run start:local",
    "start:local": "shx cp src/env/local.ts src/env/env.ts && serverless offline start",
    "deploy:dev": "shx cp src/env/dev.ts src/env/env.ts && serverless deploy --verbose",
    "deploy:prod": "shx cp src/env/prod.ts src/env/env.ts && serverless deploy --verbose",
    "build": "npm run generate && serverless package",
    "generate": "npm run generate:schemas && npm run generate:client && npm run generate:router",
    "generate:schemas": "ts-node --transpile-only local/schemasToTS.ts",
    "generate:client": "ts-node local/generateClient.ts",
    "generate:router": "ts-node local/generateRouterImports.ts",
    "test": "TZ=utc jest",
    "test:watch": "TZ=utc jest --watch",
    "type-check": "tsc",
    "lint": "eslint 'src' 'serverless.ts'",
    "lint:fix": "npm run lint -- --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.34.0",
    "@aws-sdk/client-sesv2": "^3.39.0",
    "@aws-sdk/lib-dynamodb": "^3.34.0",
    "@aws-sdk/node-http-handler": "^3.38.0",
    "@middy/core": "^2.5.3",
    "@middy/http-json-body-parser": "^2.5.3",
    "@middy/validator": "^2.5.3",
    "@raise/shared": "*",
    "ajv": "^8.6.3",
    "axios": "^0.24.0",
    "escape-html": "^1.0.3",
    "google-auth-library": "^7.10.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.0",
    "middy-middleware-jwt-auth": "^6.0.0",
    "serverless-dynamodb": "^0.2.41",
    "source-map-support": "^0.5.21",
    "stripe": "^8.184.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@raise/eslint-config": "*",
    "@serverless/typescript": "^3.27.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/escape-html": "^1.0.2",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.4.0",
    "@types/json-schema": "^7.0.9",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.18.3",
    "aws-dynamodb-local": "^0.0.10",
    "eslint": "^8.44.0",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "jest": "^29.4.3",
    "json-schema-to-typescript": "^10.1.5",
    "mockdate": "^3.0.5",
    "serverless": "^3.27.0",
    "serverless-offline": "^12.0.4",
    "serverless-offline-ses-v2": "^1.0.1",
    "serverless-offline-watcher": "^1.0.0",
    "serverless-webpack": "^5.10.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.75.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globalSetup": "./local/test-setup-global.js",
    "globalTeardown": "./local/test-teardown.js",
    "setupFilesAfterEnv": [
      "./local/test-setup-env.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/env/*.ts",
      "src/env/env.ts"
    ],
    "restoreMocks": true
  }
}
